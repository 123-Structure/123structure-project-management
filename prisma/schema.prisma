generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Dossier {
  id         Int       @id @default(autoincrement())
  numDossier String    @unique
  nomDossier String
  client     String
  dessinePar String
  location   Location?
  feedback   Feedback?
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
}

model Location {
  id         Int      @id @default(autoincrement())
  numDossier String   @unique
  cp         String
  ville      String
  latitude   Float
  longitude  Float
  dossier    Dossier  @relation(fields: [numDossier], references: [numDossier])
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model Feedback {
  id             Int      @id @default(autoincrement())
  numDossier     String   @unique
  generalComment String
  generalNote    Int
  dossier        Dossier  @relation(fields: [numDossier], references: [numDossier])
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}
