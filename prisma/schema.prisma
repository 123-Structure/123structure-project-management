generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Dossier {
  id         Int       @id @default(autoincrement())
  numDossier String    @unique
  nomDossier String
  cp         String
  ville      String
  client     String
  dessinePar String
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
  feedback   Feedback?
}

model Feedback {
  id         Int      @id @default(autoincrement())
  numDossier String   @unique
  dossier    Dossier  @relation(fields: [numDossier], references: [numDossier])
  comment    String
  note       Int
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}
