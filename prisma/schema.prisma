generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  firstName String?
  lastName  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Dossier {
  id         Int        @id @default(autoincrement())
  numDossier String     @unique
  nomDossier String     @default("")
  client     String     @default("")
  dessinePar String     @default("")
  codeInsee  String?
  location   Location?  @relation(fields: [codeInsee], references: [codeInsee])
  feedback   Feedback?
  categories Category[]
  tags       Tag[]
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt
}

model Category {
  id        Int       @id @default(autoincrement())
  name      String    @unique
  dossiers  Dossier[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Tag {
  id        Int       @id @default(autoincrement())
  name      String    @unique
  dossiers  Dossier[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Location {
  id         Int       @id @default(autoincrement())
  codePostal String    @default("")
  codeInsee  String    @unique
  ville      String    @default("")
  latitude   Float     @default(-1)
  longitude  Float     @default(-1)
  seisme     String    @default("")
  vent       String    @default("")
  neige      String    @default("")
  littoral   String?   @default("")
  dossiers   Dossier[]
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
}

model Feedback {
  id             Int      @id @default(autoincrement())
  numDossier     String   @unique
  generalComment String   @default("")
  generalNote    Int      @default(-1)
  dossier        Dossier  @relation(fields: [numDossier], references: [numDossier])
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}
